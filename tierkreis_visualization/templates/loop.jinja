{% from "macros/breadcrumbs.html" import breadcrumbs_macro with context %}

<html>

<head>
  <title>Tierkreis visualization: LOOP node</title>
  <link rel="stylesheet" type="text/css" src="/static/tokens.css" />
  <script src="/static/tokens.js"></script>
  <script src="/static/utils.js"></script>
  <script src="/static/vis-network.min.js"></script>
  <script src="/static/network.js"></script>
  <script src="/static/eventstream.js"></script>
  <style type="text/css">
    #mynetwork {
      border: 1px solid lightgray;
    }
  </style>
</head>

<body>
  {{ breadcrumbs_macro(breadcrumbs) }}
  <div id="mynetwork"></div>

  <script type="text/javascript">
    let [network, nodes, edges] = createNetwork({{ nodes|safe }}, {{ edges|safe }}, "L");
    connectToStream("{{ url|safe }}", nodes, edges);
  </script>
</body>

</html>
